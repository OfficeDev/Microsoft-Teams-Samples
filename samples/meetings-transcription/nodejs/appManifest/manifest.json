{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
  "manifestVersion": "1.19",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Meeting Transcript Bot",
    "full": "Meeting Transcript Bot"
  },
  "description": {
    "short": "Display meeting transcripts using Microsoft Graph API in a Teams task module.",
    "full": "This sample app retrieves meeting transcripts via the Graph API and showcases them in a task module."
  },
  "accentColor": "#235EA5",
  "bots": [
    {
      "botId": "${{AAD_APP_CLIENT_ID}}",
      "scopes": [ "groupChat" ],
      "isNotificationOnly": true
    }
  ],
  "validDomains": [
    "<<domain-name>>",
    "${{BOT_DOMAIN}}"
  ],
  "permissions": [ "messageTeamMembers" ],
  "webApplicationInfo": {
    "id": "${{AAD_APP_CLIENT_ID}}",
    "resource": "https://RscPermission"
  },
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "OnlineMeeting.ReadBasic.Chat",
          "type": "Application"
        }
      ]
    }
  }
}