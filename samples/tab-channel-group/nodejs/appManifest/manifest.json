{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
  "manifestVersion": "1.19",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "Teams App, Inc.",
    "websiteUrl": "https://${{TAB_DOMAIN}}",
    "privacyUrl": "https://${{TAB_DOMAIN}}/privacy",
    "termsOfUseUrl": "https://${{TAB_DOMAIN}}/termsofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Channel Group Tab",
    "full": "Channel Group Tab"
  },
  "description": {
    "short": "Sample app for creating custom channel and group tabs with ASP.NET Core.",
    "full": "This quickstart guide shows how to create custom channel and group tabs for Microsoft Teams with Javascript. It covers the complete setup process, including manifest configuration and local testing using tools like Ngrok and the Microsoft 365 Agents Toolkit for Visual Studio Code."
  },
  "accentColor": "#FFFFFF",
  "configurableTabs": [
    {
      "configurationUrl": "https://${{TAB_DOMAIN}}/config",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupChat"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "localhost",
    "${{TAB_DOMAIN}}"
  ]
}