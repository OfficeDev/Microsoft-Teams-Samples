<head>
    <script
          src="https://res.cdn.office.net/teams-js/2.0.0/js/MicrosoftTeams.min.js"
          integrity="sha384-QtTBFeFlfRDZBfwHJHYQp7MdLJ2C3sfAEB1Qpy+YblvjavBye+q87TELpTnvlXw4"
          crossorigin="anonymous">
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        microsoftTeams.app.initialize().then(()=>{
            viewLocation(); 
        })

        // Method to show geo location for given latitude and longitude values.
        function viewLocation() {
            const params = window.location.search;
            let latitude = params.substring(params.search("=")+1,params.search("&"));
            let longitude = params.substring(params.search("&")+11);
            let location = {"latitude":latitude,"longitude":longitude};

            // Methos to ask for permission and then show current user location
            microsoftTeams.location.showLocationHelper(location);
        } 
    </script>
    <style>
        .submitClick{
            margin:5rem;
            margin-left:0rem;
        }
    </style>
</head>
<body class="theme-light">
    <div class="surface">
        <div class="panel">
            <div>
