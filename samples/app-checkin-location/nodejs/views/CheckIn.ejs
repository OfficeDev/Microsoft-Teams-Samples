    <script>
        microsoftTeams.app.initialize().then(() => {
            getLocation();
        })
        
         // Method to get current user's geo location
         // If the value of allowChooseLocation is true, then the users can choose any location of their choice.
         // If the value of allowChooseLocation is false, then the users cannot change their current location.
         // If the value of showMap is false, the current location is fetched without displaying the map. 
         // showMap is ignored if allowChooseLocation is set to true.
        function getLocation() {
            if (microsoftTeams.location.isSupported()) {
                let locationProps = { "allowChooseLocation": true, "showMap": true };
                microsoftTeams.location.getLocation(locationProps, (err, location) => {
                    if (err) {
                        console.log(err);
                        return;
                    }
                    console.log(JSON.stringify(location));
                    microsoftTeams.tasks.submitTask(location);
                });
            }
            else {
               // Location feature not supported
                getLocationUsingNavigator();
            }
        }

        function getLocationUsingNavigator() {
            navigator.permissions.query({ name: "geolocation" }).then((result) => {
                if (result.state === "denied") {
                    alert("Please give permission");
                }
            });
            
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                x.innerHTML = "Geolocation is not supported by this browser.";
            }
        }

        function showPosition(position) {     
            let location = {"latitude":position.coords.latitude,"longitude":position.coords.longitude};       
            microsoftTeams.tasks.submitTask(location);
        }
    </script>
