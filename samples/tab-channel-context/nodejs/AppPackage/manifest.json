{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.13/MicrosoftTeams.schema.json",
 "manifestVersion": "1.13",
  "version": "1.0.1",
  "id": "${{TEAMS_APP_ID}}",
  "packageName": "com.teams.tabcontext",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.teams.com/privacy",
    "termsOfUseUrl": "https://www.teams.com/termsofuser"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Tab context",
    "full": "This sample shows the contents of tab context object in a private and shared channel."
  },
  "description": {
    "short": "Tab context for private/shared channels",
    "full": "This sample shows the contents of tab context object in a private and shared channel."
  },
  "accentColor": "#5558AF",
  "configurableTabs": [
    {
      "configurationUrl": "https://${{TAB_DOMAIN}}/configure",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupchat"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "*.ngrok-free.app",
    "${{TAB_DOMAIN}}"
  ]
}
