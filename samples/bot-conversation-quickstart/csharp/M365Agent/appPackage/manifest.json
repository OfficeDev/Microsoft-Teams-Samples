{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
  "manifestVersion": "1.19",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "Teams App, Inc.",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Bot Conversation Quickstart",
    "full": "Bot Conversation Quickstart"
  },
  "description": {
    "short": "Quickstart guide for Teams bot conversation and messaging extensions in csharp.",
    "full": "This app showcases bot conversation events and messaging extensions for Microsoft Teams using the Bot Framework v4."
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "${{AAD_APP_CLIENT_ID}}",
      "scopes": [
        "personal",
        "groupChat",
        "team"
      ],
      "commandLists": [
        {
          "scopes": [
            "personal"
          ],
          "commands": [
            {
              "title": "Hello",
              "description": "Sends a hello message and @mention the sender"
            }
          ]
        },
        {
          "scopes": [
            "team"
          ],
          "commands": [
            {
              "title": "Hello",
              "description": "Sends a hello message and @mention the sender"
            }
          ]
        },
        {
          "scopes": [
            "groupChat"
          ],
          "commands": [
            {
              "title": "Hello",
              "description": "Sends a hello message and @mention the sender"
            }
          ]
        }
      ],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "token.botframework.com",
    "*.ngrok-free.app",
    "*.ngrok.io",
    "${{BOT_DOMAIN}}"
  ]
}