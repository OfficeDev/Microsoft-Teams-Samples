{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.23/MicrosoftTeams.schema.json",
    "manifestVersion": "1.23",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "Microsoft",
        "websiteUrl": "https://www.microsoft.com",
        "privacyUrl": "https://www.microsoft.com/privacy",
        "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Sequential flow Adaptive Card",
        "full": "Sequential WorkFlow and User specific view Adaptive Cards Bot"
    },
    "description": {
        "short": "Sequential flow, User specific view and upto date adaptive cards sample bot",
        "full": "This sample demos the sequential flow, User specific view and upto date adaptive cards in a bot."
    },
    "accentColor": "#60A18E",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "team",
                "groupChat"
            ],
            "needsChannelSelector": false,
            "isNotificationOnly": false,
            "supportsFiles": false
        }
    ],
    "composeExtensions": [
        {
            "botId": "${{BOT_ID}}",
            "canUpdateConfiguration": true,
            "commands": [
                {
                    "id": "Incident",
                    "type": "action",
                    "title": "Get incidents",
                    "description": "Get list of incidents",
                    "initialRun": false,
                    "fetchTask": true,
                    "context": [
                        "commandBox",
                        "compose"
                    ]
                }
            ]
        }
    ],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{BOT_DOMAIN}}"
    ]
}