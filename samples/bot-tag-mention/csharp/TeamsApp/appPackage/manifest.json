{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "packageName": "com.teams.sample.teamsconversationbot",
  "developer": {
    "name": "Tag Mention Bot",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.teams.com/privacy",
    "termsOfUseUrl": "https://www.teams.com/termsofuser"
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "name": {
    "short": "Tag Mention Bot",
    "full": "Tag Mention Bot"
  },
  "description": {
    "short": "This sample app demonstrates the use of tag mention funtionality in teams scope.",
    "full": "This sample app demonstrates the use of tag mention funtionality in teams scope using Bot Framework."
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "${{AAD_APP_CLIENT_ID}}",
      "scopes": [
        "team",
        "personal"
      ],
      "isNotificationOnly": false,
      "supportsCalling": false,
      "supportsVideo": false,
      "supportsFiles": false
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [ "${{BOT_DOMAIN}}" ],
  "webApplicationInfo": {
    "id": "${{AAD_APP_CLIENT_ID}}",
    "resource": "api://botid-${{AAD_APP_CLIENT_ID}}"
  }
}