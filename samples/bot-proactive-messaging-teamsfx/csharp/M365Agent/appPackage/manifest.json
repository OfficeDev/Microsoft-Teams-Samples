{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
  "manifestVersion": "1.19",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "TeamsProactiveMesgFxBot",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.teams.com/privacy",
    "termsOfUseUrl": "https://www.teams.com/termsofuser"
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "name": {
    "short": "TeamsProactiveMesgFxBot",
    "full": "TeamsProactiveMessagingTeamsFxBot"
  },
  "description": {
    "short": "This bot sends proactive reminders by saving conversation references in Teams.",
    "full": "This bot sample demonstrates proactive messaging in Microsoft Teams by storing conversation references for sending reminder notifications. It includes guidance for local debugging, deployment to Azure, and integration with Microsoft 365 Agents Toolkit."
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "${{AAD_APP_CLIENT_ID}}",
      "scopes": [
        "personal",
        "groupChat",
        "team"
      ],
      "isNotificationOnly": false,
      "supportsCalling": false,
      "supportsVideo": false,
      "supportsFiles": false,
      "commandLists": [
        {
          "scopes": [
            "personal",
            "groupChat",
            "team"
          ],
          "commands": [

            {
              "title": "Show Welcome",
              "description": "Shows the welcome card"
            },
            {
              "title": "learn",
              "description": "Learn about Adaptive Card and Bot Command"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "webApplicationInfo": {
    "id": "${{AAD_APP_CLIENT_ID}}",
    "resource": "https://RscBasedStoreApp"
  },
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "ChatMessageReadReceipt.Read.Chat",
          "type": "Application"
        }
      ]
    }
  },
  "validDomains": [
    "${{BOT_DOMAIN}}",
    "*.ngrok-free.app"
  ]
}