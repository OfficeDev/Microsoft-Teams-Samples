{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "refresh": {
    "action": {
      "type": "Action.Execute",
      "verb": "RefreshUserSpecificView",
      "data": {
        "refreshCount": "${count}",
        "cardType": "${cardType}"
      }
    },
    "userIds": [
      "${userMri}"
    ]
  },
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Card Type",
              "horizontalAlignment": "Left",
              "color": "Accent",
              "isSubtle": true,
              "size": "Small",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${cardType}",
              "horizontalAlignment": "Left",
              "spacing": "None",
              "size": "Default",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "View",
              "horizontalAlignment": "Left",
              "color": "Accent",
              "isSubtle": true,
              "size": "Small",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${view}",
              "horizontalAlignment": "Left",
              "spacing": "None",
              "size": "Default",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "Card Status",
              "horizontalAlignment": "Right",
              "color": "Accent",
              "isSubtle": true,
              "size": "Small",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${cardStatus}",
              "horizontalAlignment": "Right",
              "spacing": "None",
              "size": "Default",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "Trigger",
              "horizontalAlignment": "Right",
              "size": "Small",
              "color": "Accent",
              "isSubtle": true,
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${trigger}",
              "horizontalAlignment": "Right",
              "spacing": "None",
              "size": "Default",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${message}",
      "wrap": true,
      "size": "Large",
      "weight": "Default",
      "horizontalAlignment": "Center"
    },
    {
      "type": "TextBlock",
      "text": "Refresh Count: ${count}",
      "wrap": true,
      "size": "Large",
      "weight": "Default",
      "horizontalAlignment": "Center"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Update Base Card",
      "verb": "UpdateBaseCard",
      "data": {
        "refreshCount": "${count}",
        "cardType": "${cardType}"
      }
    },
    {
      "type": "Action.Execute",
      "title": "Manual Refresh",
      "verb": "RefreshUserSpecificView",
      "data": {
        "refreshCount": "${count}",
        "cardType": "${cardType}"
      }
    }
  ]
}