{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "packageName": "com.teams.sample.appAnonymousUsers",
  "developer": {
    "name": "appAnonymousUsers",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.teams.com/privacy",
    "termsOfUseUrl": "https://www.teams.com/termsofuser"
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "name": {
    "short": "Anonymous User Support",
    "full": "Anonymous User Support"
  },
  "description": {
    "short": "This sample shows anonymous users support in Teams meeting apps.",
    "full": "This sample shows anonymous users support in Teams meeting apps."
  },
  "accentColor": "#FFFFFF",
  "configurableTabs": [
    {
      "configurationUrl": "https://${{BOT_DOMAIN}}/configure",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupChat"
      ],
      "context": [
        "meetingSidePanel",
        "meetingStage"
      ]
    }
  ],
  "bots": [
    {
      "botId": "${{AAD_APP_CLIENT_ID}}",
      "scopes": [
        "groupChat",
        "team"
      ],
      "isNotificationOnly": false,
      "supportsCalling": false,
      "supportsVideo": false,
      "supportsFiles": false,
      "commandLists": [
        {
          "scopes": [
            "groupChat",
            "team"
          ],
          "commands": [
            {
              "title": "Vote",
              "description": "Sends vote card message via @mention vote"
            },
            {
              "title": "CreateConversation",
              "description": "Create 1:1 conversation with bot for all the meeting participants via @mention CreateConversation"
            }
          ]
        }
      ]
    }
  ],
  "meetingExtensionDefinition": {
    "supportsAnonymousGuestUsers": true
  },
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "${{BOT_DOMAIN}}"
  ],
  "webApplicationInfo": {
    "id": "${{AAD_APP_CLIENT_ID}}",
    "resource": "api://${{BOT_DOMAIN}}/botid-${{AAD_APP_CLIENT_ID}}"
  },
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "MeetingStage.Write.Chat",
          "type": "Delegated"
        }
      ]
    }
  }
}