{
    "name": "teams-bot",
    "version": "1.0.0",
    "msteams": {
      "teamsAppId": null
    },
    "description": "Teams Streaming Bot - showcases conversational streaming using Azure OpenAI",
    "author": "Microsoft",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "dev:teamsfx": "env-cmd --silent -f .localConfigs npm run dev",
        "dev:teamsfx:testtool": "env-cmd --silent -f .localConfigs.playground npm run dev",
        "dev:teamsfx:launch-testtool": "env-cmd --silent -f env/.env.playground teamsapptester start",
        "dev": "nodemon --inspect=9239 --signal SIGINT ./index.js",
        "start": "node ./index.js",
        "watch": "nodemon ./index.js",
        "build": "node build.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OfficeDev/Microsoft-Teams-Samples.git"
    },
    "dependencies": {
        "@azure/identity": "^4.11.1",
        "openai": "^4.67.1",
        "@microsoft/teams.apps": "^2.0.0",
        "@microsoft/teams.api": "^2.0.0",
        "@microsoft/teams.common": "^2.0.0",
        "adaptive-expressions": "^4.18.0",
        "adaptivecards-templating": "^2.3.1"
    },
    "devDependencies": {
        "env-cmd": "^10.1.0",
        "nodemon": "^3.1.10",
        "esbuild": "^0.25.11"

    }
}
