<!DOCTYPE html>
<html lang="en">
    <head>
        <script src="https://unpkg.com/@microsoft/mgt@2/dist/bundle/mgt-loader.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://res.cdn.office.net/teams-js/2.1.0/js/MicrosoftTeams.min.js" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <script src="./scripts/auth-delegated.js"></script>
        <meta charset="UTF-8">
        <meta http-equiv="Content-Security-Policy" content="default-src *; style-src 'self' 'unsafe-inline' http://localhost:3978; script-src 'self' 'unsafe-inline' 'unsafe-eval'">
    </head>
    <style>
        #mainDiv {
            padding-left: 2%;
            padding-top: 2%;
            padding-right: 2%;
        }

        .container {
        margin-top: 1rem;
        margin-left:1.5rem;
        }
    </style>
</head>

<body id=mainDiv>
    <div class="container">
        <div id="productDetails">
            <h4>Request Details</h4>
            <br>
            <label for="title" class="title">Message title:</label>
            <br>
            <div id="title"></div>
            <br>
            <label for="description" class="title">Message description:</label>
            <br>
            <div id="description"></div>
            <br>
            <label for="messageby" class="title">Message by:</label>
            <br>
            <div id="requestCreatedBy"></div>
        </div>
    </div>
    <script>
        var data =  <%-data%>

        microsoftTeams.app.initialize();
        getRequestDetails(); 
        
        function getRequestDetails() {
            $("#title").text(data.title);
            $("#description").text(data.description);
            $("#requestCreatedBy").text(data.createdBy);    
        }
    </script>
</body>

</html>