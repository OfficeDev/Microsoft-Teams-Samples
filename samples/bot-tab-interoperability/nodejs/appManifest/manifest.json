{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "packageName": "com.teams.bottabinteroperability",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.teams.com/privacy",
    "termsOfUseUrl": "https://www.teams.com/termsofuser"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Interoperability Bot-Tab",
    "full": "Interoperability Bot and Tab"
  },
  "description": {
    "short": "Interoperability Bot and Tab",
    "full": "Interoperability bewteen Bot and Tab"
  },
  "accentColor": "#5558AF",
  "staticTabs": [
    {
      "entityId": "tab1",
      "name": "Color Tab",
      "contentUrl": "https://${{BOT_DOMAIN}}/personalTab",
      "scopes": [
        "personal"
      ]
    }
  ],
  "bots": [
    {
      "botId": "${{AAD_APP_CLIENT_ID}}",
      "scopes": [
        "personal"
      ],
      "needsChannelSelector": false,
      "isNotificationOnly": false,
      "supportsFiles": false
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "${{BOT_DOMAIN}}"
  ]
}