{
    "name": "teams-bot",
    "version": "1.0.0",
    "msteams": {
      "teamsAppId": null
    },
    "description": "Bot Builder v4 Bot Teams sample - Meeting AI Insights",
    "author": "Microsoft",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "dev:teamsfx": "env-cmd --silent -f .localConfigs npm run dev",
        "dev:teamsfx:testtool": "env-cmd --silent -f .localConfigs.playground npm run dev",
        "dev:teamsfx:launch-testtool": "env-cmd --silent -f env/.env.playground teamsapptester start",
        "dev": "nodemon --inspect=9239 --signal SIGINT ./index.js",
        "start": "node ./index.js",
        "watch": "nodemon ./index.js",
        "build": "node build.js",
        "lint": "eslint .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OfficeDev/Microsoft-Teams-Samples.git"
    },
    "dependencies": {
        "@microsoft/teams.apps": "^2.0.0",
        "@microsoft/teams.common": "^2.0.0",
        "axios": "^1.6.0",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "env-cmd": "^10.1.0",
        "esbuild": "^0.18.1",
        "eslint": "^8.0.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.27.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.1.0",
        "nodemon": "^3.1.10"
    }
}
