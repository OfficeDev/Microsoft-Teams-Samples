{
  "$schema": "https://raw.githubusercontent.com/OfficeDev/microsoft-teams-app-schema/preview/DevPreview/MicrosoftTeams.schema.json",
  "manifestVersion": "1.9",
  "version": "1.0.0",
  "id": "b404cc0a-f062-42c5-85c8-d8bb1dd12fc1",
  "packageName": "com.microsoft.tabconversations",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "name": {
    "short": "Conversational Tab",
    "full": "Conversational Tab"
  },
  "description": {
    "short": "View Tab With Conversations",
    "full": "This sample demos conversational tabs"
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#60A18E",
  "configurableTabs": [
    {
        "configurationUrl": "<<your base url>>/configure",
        "canUpdateConfiguration": true,
        "scopes": [
            "team"
        ],
        "context":[
          "channelTab"
        ]
    }
  ],
  "permissions": [ "identity", "messageTeamMembers" ],
  "validDomains": [
    "<<DOMAIN-NAME>>",
    "token.botframework.com"
  ]
}