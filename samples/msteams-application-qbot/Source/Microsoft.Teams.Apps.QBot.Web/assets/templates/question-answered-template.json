{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "text": "${message}",
      "wrap": true,
      "fontType": "Default"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.OpenUrl",
          "title": "${buttonTitle}",
          "url": "${buttonUrl}"
        }
      ]
    }
  ]
}