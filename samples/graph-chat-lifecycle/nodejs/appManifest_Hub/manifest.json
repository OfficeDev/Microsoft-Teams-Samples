{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.13/MicrosoftTeams.schema.json",
  "manifestVersion": "1.13",
  "version": "1.0.1",
  "id": "<<YOUR-MICROSOFT-APP-ID>>",
  "packageName": "com.contoso.chatlifecycle",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "name": {
    "short": "Chat Lifecycle App",
    "full": "Chat Lifecycle App"
  },
  "description": {
    "short": "Chat Lifecycle Application",
    "full": "Chat Lifecycle Application for showing all the scopes of adding users and installing polly app."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#60A18E",
  "staticTabs": [
    {
      "entityId": "com.contoso.chatlifecycle.static",
      "name": "Chat Lifecycle",
      "contentUrl": "https://<<YOUR-BASE-URL>>/chatLifecycle",
      "scopes": [
        "personal"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "<<YOUR-BASE-URL>>"
  ],
  "webApplicationInfo": {
    "id": "<<YOUR-MICROSOFT-APP-ID>>",
    "resource": "api://<<YOUR-BASE-URL>>/<<YOUR-MICROSOFT-APP-ID>>"
  }
}