{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
  "manifestVersion": "1.19",
  "version": "1.0.1",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "name": {
    "short": "Chat Lifecycle App",
    "full": "Chat Lifecycle App"
  },
  "description": {
    "short": "Manage chat lifecycle in Teams with Microsoft Graph APIs using python.",
    "full": "This sample demonstrates how to manage the chat lifecycle in Microsoft Teams using python and Microsoft Graph APIs, including creating chats, adding members, and deleting members."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#60A18E",
  "staticTabs": [
    {
      "entityId": "com.contoso.chatlifecycle.static",
      "name": "Chat Lifecycle",
      "contentUrl": "https://${{BOT_DOMAIN}}/tab",
      "scopes": [
        "personal"
      ]
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "https://${{BOT_DOMAIN}}/configure",
      "canUpdateConfiguration": true,
      "scopes": [
        "team"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "${{BOT_DOMAIN}}"
  ],
  "webApplicationInfo": {
    "id": "${{AAD_APP_CLIENT_ID}}",
    "resource": "api://${{BOT_DOMAIN}}/${{AAD_APP_CLIENT_ID}}"
  }
}