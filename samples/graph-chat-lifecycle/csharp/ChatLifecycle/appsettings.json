{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "common",
    "ClientId": "<<YOUR-APP-ID>>",
    "AppSecret": "<<YOUR-APP-PASSWORD>>",
    "ApplicationIdURI": "api://<<BASE-URL-DOMAIN>>/<<YOUR-APP-ID>>",
    "AuthUrl": "/oauth2/v2.0/token",
