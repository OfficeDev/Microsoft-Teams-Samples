  "actions": [
    {
      "type": "Action.Submit",
      "title": "Action.Submit",
      "conditionallyEnabled": true
    },
    {
      "type": "Action.Submit",
      "title": "Permanently disabled button",
      "isEnabled": false
    }
  ]
} 