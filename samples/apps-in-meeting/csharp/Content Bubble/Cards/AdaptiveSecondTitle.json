{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",

  "body": [
    {
      "type": "TextBlock",
      "text": "Provide your Feedback!",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Increase research budget by 10%?",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "myReview",
      "style": "expanded",
      "isMultiSelect": false,
      "wrap": true,
      "value": "1",
      "choices": [
        {
          "title": "Yes",
          "value": "yes"
        },
        {
          "title": "No",
          "value": "no"
        }

      ]
    }
  ],

  "actions": [
    {
      "type": "Action.Submit",
      "id": "submit",
      "title": "Submit",
      "data": {
        "action": "Increase research budget by 10%"

      }
    }
  ]

}