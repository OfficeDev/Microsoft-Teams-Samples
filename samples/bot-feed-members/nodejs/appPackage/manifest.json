{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.23/MicrosoftTeams.schema.json",
    "manifestVersion": "1.23",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "My App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/termofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "bot-feed-members${{APP_NAME_SUFFIX}}",
        "full": "full name for bot-feed-members"
    },
    "description": {
        "short": "Bot for managing team members in Teams conversations",
        "full": "A Teams bot that helps manage team members by listing all members and welcoming new members with detailed information using Adaptive Cards"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal",
                "team",
                "groupChat"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
                {
                  "scopes": ["personal", "team", "groupChat"],
                  "commands": [
                      {
                          "title": "list",
                          "description": "List all members in the current conversation"
                      },
                      {
                          "title": "hello",
                          "description": "Get welcome card with member management options"
                      }
                  ]
                }
            ]
        }
    ],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}