{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "type": "AdaptiveCard",
  "refresh": {
    "action": {
      "type": "Action.Execute",
      "verb": "basicRefresh",
      "title": "RefreshTitle"
    }
  },
  "body": [
    {
      "type": "TextBlock",
      "text": "Welcome Universal Card",
      "size": "Medium",
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "text": "${authresult}",
      "size": "Small",
      "wrap": true
    }
  ],
  "authentication": {
    "connectionName": "oauthbotsetting"
  }
}
