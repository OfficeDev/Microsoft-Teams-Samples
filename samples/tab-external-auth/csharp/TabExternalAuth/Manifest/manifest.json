{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.11/MicrosoftTeams.schema.json",
  "manifestVersion": "1.12",
  "version": "1.0.0",
  "id": "{{GUID-ID}}",
  "packageName": "com.microsoft.teams.tabexternalauth",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "name": {
    "short": "Tab External Auth App",
    "full": "Tab External Auth App"
  },
  "description": {
    "short": "Sample which showcases external authentication using OAuth providers",
    "full": "Sample which showcases external authentication using OAuth providers"
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#60A18E",
  "staticTabs": [
    {
      "entityId": "auth",
      "name": "Auth",
      "contentUrl": "https://{{domain-name}}/Home/Index",
      "scopes": [ "personal" ]
    }
  ],
  "validDomains": [
    "{{domain-name}}"
  ]
}
